<!DOCTYPE html>
<html lang="en">

<head>
    {{>Headerlink}}
</head>

<body>
    <!--Header start-->
    {{>Navbar}}
    <!--Header End-->
    <!--Main start-->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- Left side div -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcome to Weather App</p>
                        <h1>Get The Latest <span class="span-clr">Weather</span> Info Of Your City</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <!-- Right side div -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="w-100 slid_pic_all" src="./Images/slid_pic_one.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 slid_pic_all" src="./Images/slid_pic_two.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 slid_pic_all" src="./Images/slid_pic_three.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Main End-->
    <!--Footer Start-->
    {{>Footer}}
    <!--Footer End-->
</body>

</html>